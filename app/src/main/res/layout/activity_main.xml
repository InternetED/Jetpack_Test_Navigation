<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">


    <Button
        android:id="@+id/btnGoDetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前往詳情頁面"
        app:layout_constraintBottom_toTopOf="@+id/btnGoHostPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoHostPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前往首頁頁面"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGoOtherHostPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="前往其他首頁頁面"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoHostPage" />


</androidx.constraintlayout.widget.ConstraintLayout>